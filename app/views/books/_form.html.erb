<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
    <div class="alert alert-warning">
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    </div>
<% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
